<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="inventory_source">
        <column xsi:type="text" name="working_time" nullable="true"/>
    </table>
    <table name="quote">
        <column xsi:type="varchar" name="pickup_source_code" nullable="true" length="255" comment="Pick Up Source Code"/>
        <column xsi:type="timestamp" name="pickup_date" nullable="true" comment="Pick Up Date"/>
        <constraint xsi:type="foreign" referenceId="QUOTE_PICKUP_SOURCE_CODE_INV_SOURCE_SOURCE_CODE"
                    table="quote" column="pickup_source_code" referenceTable="inventory_source"
                    referenceColumn="source_code" onDelete="NO ACTION"/>
    </table>
    <table name="sales_order">
        <column xsi:type="varchar" name="pickup_source_code" nullable="true" length="255" comment="Pick Up Source Code"/>
        <column xsi:type="timestamp" name="pickup_date" nullable="true" comment="Pick Up Date"/>
        <constraint xsi:type="foreign" referenceId="SALES_ORDER_PICKUP_SOURCE_CODE_INV_SOURCE_SOURCE_CODE"
                    table="sales_order" column="pickup_source_code" referenceTable="inventory_source"
                    referenceColumn="source_code" onDelete="NO ACTION"/>
    </table>
</schema>
